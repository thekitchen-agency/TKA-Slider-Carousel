{
  "name": "tka-slider-carousel",
  "version": "1.1.0",
  "description": "A premium GSAP-powered slider library with infinite looping and drag physics.",
  "type": "module",
  "main": "./dist/tka-slider.umd.js",
  "module": "./dist/tka-slider.es.js",
  "exports": {
    ".": {
      "import": "./dist/tka-slider.es.js",
      "require": "./dist/tka-slider.umd.js"
    },
    "./style.css": "./dist/tka-slider-carousel.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "gsap": "^3.12.5"
  },
  "devDependencies": {
    "gsap": "^3.12.5",
    "sass": "^1.83.4",
    "vite": "^6.0.7",
    "semantic-release": "^24.2.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.1"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  },
  "keywords": [
    "slider",
    "carousel",
    "gsap",
    "animation",
    "infinite",
    "draggable"
  ],
  "author": "thekitchen.agency | Tiago Dias",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  }
}
